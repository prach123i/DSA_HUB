  <script>
    // JavaScript to toggle FAQ visibility
    const faqItems = document.querySelectorAll('.faq-item h3');
    
    faqItems.forEach(item => {
      item.addEventListener('click', () => {
        const parent = item.parentElement;
        parent.classList.toggle('active');
      });

      document.querySelectorAll('.hover-effect').forEach(img => {
    img.addEventListener('mousemove', e => {
        const rect = img.getBoundingClientRect();
        const x = e.clientX - rect.left; // Get the horizontal coordinate
        const y = e.clientY - rect.top; // Get the vertical coordinate

        // Move the image slightly based on cursor position
        img.style.transform = `translate(${(x - rect.width / 2) / 10}px, ${(y - rect.height / 2) / 10}px) scale(1.1)`;
    });

    img.addEventListener('mouseleave', () => {
        img.style.transform = 'scale(1)';
    });
});
    });


    //profile popup
    
function toggleProfileMenu() {
    var menu = document.getElementById("profile-menu");
    menu.style.display = menu.style.display === "block" ? "none" : "block";
  }

  // Close menu when clicking outside
  document.addEventListener("click", function(event) {
    var profileContainer = document.querySelector(".profile-container");
    var profileMenu = document.getElementById("profile-menu");

    if (!profileContainer.contains(event.target)) {
      profileMenu.style.display = "none";
    }
  });
  </script>
